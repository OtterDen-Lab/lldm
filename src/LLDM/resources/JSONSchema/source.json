{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "source.json",
    "description": "This schema describes the source of the data, i.e which book it came from",
    "type": "object",
    "required": ["text"],
    "properties": {
        "text": {
            "type": "string",
            "examples": ["PHB p41", "Unearthed Arcana: The Artificer Revisited"]
        },
        "note": {
            "type": "string",
            "input": "textarea"
        },
        "href": {
            "type": "string",
            "format": "uri",
            "examples": ["https://media.wizards.com/2019/dnd/downloads/UA-Artificer-2019.pdf"]
        }
    }
}